doctype html
html(lang="en")
  head
    title Document
  body(style="font-family: Arial, sans-serif; padding: 20px;")
    ul(style="list-style-type: none; padding: 0;")
      each i in files
        a(href=`http://localhost:3000/download/${i}`, target="_blank", rel="noopener noreferrer", style="text-decoration: none; color: #333;")
          li(style="margin-bottom: 5px; background-color: #f0f0f0; padding: 10px; border-radius: 5px;")= i
